{
  // "extends": "./src/backend/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "../../.dist/",
    "sourceMap": true,
    "rootDir": "../../",
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@shared/*": ["../shared/*"],
      "~/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types", "../shared/types"],
    "skipLibCheck": true,
    "incremental": true
  },
  "include": ["./**/*.ts", "../shared/**/*.ts"],
  "exclude": ["node_modules", "tsconfig.json", "./scripts/**/*.ts"]
}
